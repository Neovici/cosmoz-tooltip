{
  "name": "@neovici/cosmoz-tooltip",
  "version": "0.0.0",
  "description": "Tooltip component using CSS Anchor Positioning and Popover API",
  "keywords": [
    "web-components",
    "pion",
    "lit-html",
    "tooltip",
    "popover",
    "css-anchor-positioning"
  ],
  "homepage": "https://github.com/Neovici/cosmoz-tooltip#readme",
  "bugs": {
    "url": "https://github.com/Neovici/cosmoz-tooltip/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Neovici/cosmoz-tooltip.git"
  },
  "license": "Apache-2.0",
  "author": "Neovici Development",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "lint": "tsc && eslint --cache .",
    "check:duplicates": "check-duplicate-components",
    "build": "tsc -p tsconfig.build.json",
    "start": "wds",
    "test": "vitest --project=storybook --run",
    "test:watch": "vitest --project=storybook",
    "storybook:start": "storybook dev -p 8000",
    "storybook:build": "storybook build",
    "storybook:deploy": "storybook-to-ghpages",
    "storybook:preview": "npm run storybook:build && http-server ./storybook-static/ --silent",
    "prepare": "husky"
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/github",
      "@semantic-release/npm",
      "@semantic-release/git"
    ],
    "branch": "main",
    "preset": "conventionalcommits"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist/",
    "types"
  ],
  "exports": {
    ".": "./dist/index.js",
    "./cosmoz-tooltip": "./dist/cosmoz-tooltip.js"
  },
  "dependencies": {
    "@neovici/cosmoz-tokens": "^3.2.1",
    "@pionjs/pion": "^2.5.2",
    "lit-html": "^3.3.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.0.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@neovici/cfg": "^2.8.0",
    "@neovici/cosmoz-button": "^1.0.0",
    "@neovici/cosmoz-icons": "^1.5.0",
    "@neovici/testing": "^2.0.0",
    "@playwright/test": "^1.58.1",
    "@semantic-release/changelog": "^6.0.0",
    "@semantic-release/git": "^10.0.0",
    "@storybook/addon-docs": "^10.0.0",
    "@storybook/addon-vitest": "^10.2.4",
    "@storybook/web-components-vite": "^10.2.4",
    "@types/node": "^24.0.0",
    "@vitest/browser": "^4.0.18",
    "@vitest/browser-playwright": "^4.0.18",
    "eslint": "^9.0.0",
    "http-server": "^14.1.1",
    "husky": "^9.0.0",
    "lint-staged": "^16.2.7",
    "semantic-release": "^25.0.3",
    "shadow-dom-testing-library": "^1.13.1",
    "sinon": "^19.0.0",
    "storybook": "^10.0.0",
    "typescript": "^5.4.3",
    "vitest": "^4.0.18"
  },
  "overrides": {
    "conventional-changelog-conventionalcommits": ">= 8.0.0"
  }
}
